{
  "compilerOptions": {
    "target": "es2015",                          
    "module": "commonjs",                     
    "outDir": "./dist",                       
    "rootDir": "./src", 
    "baseUrl": ".",                     
    "removeComments": true,        
    "strict": true,                           
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],                     
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  }
}
